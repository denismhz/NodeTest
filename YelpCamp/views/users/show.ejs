<% include ../partials/header.ejs %>
    <div class="row">
        
        <div class="col-md-4">
            <h1><%= user.firstName + " " + user.lastName %></h1>
            <div class="collapse multi-collapse" id="name">
                <input class="form-control" form="userEdit" id="firstName" type="text" name=user[firstName] placeholder="New first Name">
                <input class="form-control" form="userEdit" id="lastName" type="text" name=user[lastName] placeholder="New last Name">
            </div>
            <div class="card mb-4" style="border-radius: 5%">
                <img style="width: 100%; border-radius: 5%; border-bottom-left-radius:0%; border-bottom-right-radius:0%" src="<%= user.avatar %>">
                <div class="collapse multi-collapse" id="image">
                    <input class="form-control" id="image" form="userEdit" name="user[avatar]" pattern="^https:\/\/images\.unsplash\.com\/.*" title="Only images from images.unsplash.com allowed." placeholder="https://images.unsplash.com/..." required>
                    <small class="ml-1">Click <a href="https://unsplash.com/search/profilepicture">here</a> to go to unsplash.com</small>
                </div>
                <div class="card-body">
                    <a class="card-link" href="mailto:<%= user.email %>"><%= user.email %></a>
                    <div class="collapse multi-collapse" id="email">
                        <input class="form-control" form="userEdit" id="email" type="email" name=user[email] placeholder="New E-Mail">
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <p><%= user.bio %></p>
                    <% if(currentUser && user._id.equals(currentUser._id)){ %>
                        <button class="btn btn-warning btn-sm mb-2" data-toggle="collapse" data-target=".multi-collapse" type="button" aria-expanded="false" aria-controls="bio name email image">Edit</button>
                        <div class="collapse multi-collapse" id="bio">
                            <div class="form-group">
                                <form id="userEdit" action="/users/<%= user._id %>?_method=PUT" method="POST">
                                    <textarea class="form-control mb-2" name=user[bio]>New Bio</textarea>
                                    <button class="btn btn-success btn-sm mb-2" form="userEdit">Submit Changes</button>
                                    <a class="btn btn-light btn-sm float-right" href="/users/<%= user._id %>">Cancel</a>
                                </form>
                            </div>
                        </div>
                    <%}%>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <h3 class="mt-5">Campgrounds created by <%= user.username %> </h3>
            <div class="list-group mb-4">
                <% campgrounds.forEach(function(campground){ %>
                    <a class="list-group-item list-group-item-action flex-column align-items-start p-0" href="/campgrounds/<%=campground.id%>">
                        <img class="float-left" style="height: 20%; width: 20%;" src="<%=campground.image%>">
                        <div class="row">
                        <div class="col-md-6 text-center ml-4">
                            <p class="text-justify" style="overflow-wrap: break-word;"><%= campground.description.substr(0, 100) %>...</p>
                        </div>
                        <div class="col-md-3 text-center ml-4">
                            <h3 class=""><%= campground.name.substr(0,100) %></h3>
                        </div>
                        </div>
                    </a>
                <% }); %>
            </div>
        </div>
    </div>

    
<% include ../partials/footer.ejs %>
    
