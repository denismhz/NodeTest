<% include ../partials/header %>
<div class="row">
<h1 style="text-align: center; margin: 25px">Create a new Campground</h1>
        <form action="/campgrounds" method="POST">
                <div style="width: 30%; margin: 0 auto;">
                        <div class="form-group">
                                <input class="form-control" type="text" placeholder="name" name="name">
                        </div>
                        <div class="form-group">
                                <input class="form-control" type="text" placeholder="image url" name ="image">
                        </div>
                        <div class="form-group">
                                <input class="form-control" type="text" name="description" placeholder="description">
                        </div>
                        <div class="form-group">
                                <input class="form-control" type="number" name="price" placeholder="price/night" min="0.01" step="0.01">
                        </div>
                        <div class="form-group">
                                <button class="btn btn-lg btn-primary btn-block">Submit</button>
                        </div>
                        <a href=/campgrounds>Go back</a>
                </div>
        </form>	
</div>
<% include ../partials/footer %>
